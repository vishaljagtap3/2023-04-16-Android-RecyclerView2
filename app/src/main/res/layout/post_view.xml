<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_margin="16dp"
        android:id="@+id/txtAccountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bitcodetech"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_margin="16dp"
        android:id="@+id/txtPostedOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12-12-2022"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_margin="16dp"
        android:id="@+id/imgPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/image02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAccountName" />


    <Button
        android:layout_margin="16dp"
        android:text="Like"
        android:id="@+id/btnLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgPost" />

    <TextView
        android:textColor="#000"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@id/btnLike"
        app:layout_constraintBottom_toBottomOf="@id/btnLike"
        app:layout_constraintLeft_toRightOf="@id/btnLike"
        android:id="@+id/txtLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnLike"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/txtText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="16dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@id/txtText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>